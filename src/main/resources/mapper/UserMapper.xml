<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.weigh.verification.dao.UserDao">
    <select id="getInfoById" resultType="com.weigh.verification.model.UserModel">
        select *
        from `user`
        where `id` = #{id}
          and is_delete = 0
        limit 1;
    </select>

    <select id="getInfo" resultType="com.weigh.verification.model.UserModel">
        select *
        from `user`
        where `email` = #{email}
          and is_delete = 0
        limit 1;
    </select>

    <select id="getList" resultType="com.weigh.verification.model.UserModel">
        select `email`, `nickname`, `state`, `create_time`, `update_time`
        from `user`
        where is_delete = 0
    </select>

    <update id="edit">
        update `user`
        set `email`      = #{email},
            `nickname`   = #{nickname},
            `update_time`=#{updateTime}
        where id = #{id}
    </update>

    <update id="delete">
        update `user`
        set `is_delete`  = 1,
            `update_time`=#{updateTime}
        where id = #{id}
    </update>

    <update id="modifyState">
        update `user`
        set `state`      = #{state},
            `update_time`=#{updateTime}
        where id = #{id}
    </update>

    <insert id="add">
        INSERT INTO `user` (`email`, `password`, `nickname`, `create_time`, `update_time`)
        VALUES (#{email}, #{password}, #{nickname}, #{createTime}, #{updateTime})
    </insert>
</mapper>