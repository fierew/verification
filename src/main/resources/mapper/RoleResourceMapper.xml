<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.weigh.verification.dao.RoleResourceDao">
    <insert id="addAll">
        INSERT INTO `rbac_role_resource` (`role_id`, `resource_id`, `create_time`)
                VALUES
        <foreach collection="list" item="roleResource" separator=",">
            (#{roleResource.roleId}, #{roleResource.resourceId}, #{roleResource.createTime})
        </foreach>
    </insert>

    <delete id="delete">
        DELETE FROM `rbac_role_resource` WHERE role_id = #{roleId}
    </delete>
</mapper>